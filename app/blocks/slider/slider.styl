	&__item
		height 451px
		+r(586px)
			height 280px
	&__link
		padding-top 78px
		padding-right 82px
		padding-bottom 78px
		padding-left 82px
		display block
		height 100%
		background-size cover
		background-position 50% 0
		background-repeat no-repeat
		color #fff
		text-decoration none
		+r(586px)
			padding-top 38px
			padding-bottom 38px
			padding-left 40px
			padding-right 40px

	&__content
		max-width 505px
	&__title
		margin-bottom 26px
		font-size 48px
		font-weight bold
		line-height 1.1
		text-transform uppercase
		+r(586px)
			font-size 30px
		+r($m)
			font-size 20px
	&__text
		margin-bottom 44px
		min-height 76px
		max-height 76px
		font-size 24px
		font-weight normal
		line-height 1.4
		+r(586px)
			margin-bottom 0
			max-height 76px
			font-size 15px
		+r($m)
			font-size 14px
