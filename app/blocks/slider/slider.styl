	&__arrow
		position absolute
		top 50%
		left calc(50% + 0px)
		width 6px
		height 11px
		fill #fff
		transform translate(-50%, -50%)
	.slick-arrow
		z-index 1
		width 41px
		height 41px
		border 6px solid rgba(237, 28, 36, 0.39)
		background-color #ed1c24
		border-radius 50%
		tr(opacity .2s ease)
		+r(586px)
			width 20px
			height 20px
		&:before
			display none 
		// &:after
		// 	position absolute
		// 	top 50%
		// 	left calc(50% - 0px)
		// 	content ''
		// 	retinaSprite($arrow_group)
		// 	transform translate(-50%, -50%)
		&:hover
			background-color darken(#ed1c24, 10)
			tr(background-color .2s ease)
	.slick-next
		border none
		right 0
	.slick-prev
		border none
		left 0
		transform translateY(-50%) rotate(-180deg)


		